<!-- views/register.ejs -->
<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <title>新規登録 - 家計簿アプリ</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/style.css" />
</head>
<body class="auth-page">
  <main class="auth-main">
    <div class="auth-card card">
      <div class="auth-logo">家計簿アプリ</div>
      <h1 class="auth-title">新規登録</h1>

      <% if (error) { %>
        <div class="alert">
          <ul><li><%= error %></li></ul>
        </div>
      <% } %>

      <form action="/register" method="POST" class="stack">
        <div class="field">
          <span class="field-label">メールアドレス</span>
          <input type="email" name="email" required />
        </div>

        <div class="field">
          <span class="field-label">パスワード</span>
          <input type="password" name="password" required />
        </div>

        <button type="submit" class="btn primary align-right">登録する</button>
      </form>

      <p class="auth-sub">
        すでにアカウントをお持ちの方は
        <a href="/login" class="link-primary">ログイン</a>
      </p>
    </div>
  </main>
</body>
</html>
