<!-- views/register.ejs -->
<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <title>新規登録 - 家計簿アプリ</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <main class="container">
    <h1>ゆうちょ家計簿 新規登録</h1>

    <% if (error) { %>
      <div class="alert">
        <ul><li><%= error %></li></ul>
      </div>
    <% } %>

    <form action="/register" method="POST" class="card stack">
      <label>メールアドレス:
        <input type="email" name="email" required />
      </label>
      <label>パスワード:
        <input type="password" name="password" required />
      </label>
      <button type="submit">登録する</button>
    </form>

    <p>すでにアカウントをお持ちの方は <a class="btn" href="/login">ログイン</a></p>
  </main>
</body>
</html>
